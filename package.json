{
  "name": "@stone-js/node-http-adapter",
  "version": "0.0.22",
  "description": "Stone.js Node HTTP adapter",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stonemjs/node-http-adapter.git"
  },
  "homepage": "https://github.com/stonemjs/node-http-adapter#readme",
  "bugs": {
    "url": "https://github.com/stonemjs/node-http-adapter/issues"
  },
  "keywords": [
    "node",
    "http",
    "server",
    "bridge",
    "driver",
    "runner",
    "adapter",
    "Stone.js",
    "connector"
  ],
  "files": [
    "/dist"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "lint": "ts-standard src",
    "lint:fix": "ts-standard --fix src tests",
    "predoc": "rimraf docs",
    "doc": "typedoc",
    "prebuild": "rimraf dist && npm run doc",
    "build": "rollup -c",
    "test": "vitest run",
    "test:cvg": "npm run test -- --coverage",
    "test:text": "npm run test:cvg -- --coverage.reporter=text",
    "test:html": "npm run test:cvg -- --coverage.reporter=html",
    "test:clover": "npm run test:cvg -- --coverage.reporter=clover",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@stone-js/config": "^0.0.35",
    "@stone-js/core": "^0.0.36",
    "@stone-js/http-core": "^0.0.34",
    "@stone-js/pipeline": "^0.0.46",
    "@stone-js/service-container": "^0.0.44"
  },
  "dependencies": {
    "accepts": "^1.3.8",
    "bytes": "^3.1.2",
    "co-body": "^6.2.0",
    "content-type": "^1.0.5",
    "deepmerge": "^4.3.1",
    "mime": "^4.0.4",
    "on-finished": "^2.4.1",
    "proxy-addr": "^2.0.7",
    "raw-body": "^3.0.0",
    "statuses": "^2.0.1",
    "type-is": "^1.6.18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/accepts": "^1.3.7",
    "@types/bytes": "^3.1.4",
    "@types/co-body": "^6.1.3",
    "@types/content-type": "^1.1.8",
    "@types/mime": "^3.0.4",
    "@types/node": "^22.9.0",
    "@types/on-finished": "^2.3.4",
    "@types/proxy-addr": "^2.0.3",
    "@types/statuses": "^2.0.5",
    "@types/type-is": "^1.6.6",
    "@vitest/coverage-v8": "^2.1.4",
    "husky": "^9.1.6",
    "rimraf": "^6.0.1",
    "rollup": "^4.1.5",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "ts-standard": "^12.0.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "ts-standard": {
    "globals": [
      "it",
      "expect",
      "describe",
      "beforeEach"
    ]
  }
}
